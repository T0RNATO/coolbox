{
  "manifest_version": 3,
  "name": "CoolBox",
  "version": "1.1.1",
  "description": "An extension to make Donvale Schoolbox look good again.",
  "icons": {
    "64": "icon.png"
  },
  "content_scripts": [
    {
      "css": [
        "css/homepage.css",
        "css/flatpickr.min.css",
        "css/font.css"
      ],
      "js": [
        "js/flatpickr.js",
        "js/schoolbox.js",
        "js/reminders.js"   
      ],
      "matches": [
        "https://schoolbox.donvale.vic.edu.au/"
      ]
    }
  ],
  "host_permissions": [
    "https://schoolbox.donvale.vic.edu.au/"
  ],
  "web_accessible_resources": [
    {
      "resources": [ "html/homepage.html" ],
      "matches": [
        "https://schoolbox.donvale.vic.edu.au/*"
      ]
    }
  ],
  "background": {
    "service_worker": "js/service_worker.js"
  },
  "permissions": [
    "cookies",
    "alarms",
    "notifications"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "extension@coolbox.lol"
    }
  },
  "action": {
    "default_icon": {
      "64": "icon.png"
    },
    "default_popup": "settings.html"
  }
}
